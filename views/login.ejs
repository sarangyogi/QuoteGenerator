<!DOCTYPE html>
<html lang="en">
<%- include('./partials/header') %>
<body style="background-image: url(https://images.unsplash.com/photo-1476108621677-3c620901b5e7?ixid=MnwxMjA3fDB8MHxzZWFyY2h8Nnx8d2hpdGUlMjBuYXR1cmV8ZW58MHx8MHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=600&q=60);background-repeat: no-repeat;background-size: cover;">
  <%- include('./partials/navbar') %>
  <div class="container mt-5" style="max-width: 550px;">

    <form action="/login" method="POST">
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Email address</label>
            <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="email">
            <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
        </div>
        <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label">Password</label>
            <input type="password" class="form-control" id="exampleInputPassword1" name="password">
        </div>
        <div class="mb-3 form-check" style="display: none;">
            <input type="hidden" class="form-check-input" id="exampleCheck1" value="false" name="islogin">
            <!-- <label class="form-check-label" for="exampleCheck1">Check me out</label> -->
        </div>
        <button type="submit" class="btn btn-primary">Login</button>
    </form>
    <a href="/register"><button type="submit" class="btn btn-primary mt-2">Don't have an account</button></a>
  </div>
  <%- include('./partials/footer') %>
</body>
</html>